{
  "name": "quiz-app",
  "version": "1.0.0",
  "description": "4択クイズアプリ - Clean Architecture",
  "main": "dist/app/server/server.js",
  "scripts": {
    "build": "tsc -p tsconfig.base.json",
    "start": "node dist/app/server/server.js",
    "dev": "nodemon --exec ts-node app/server/server.ts",
    "dev:js": "nodemon server.js",
    "lint": "eslint . --ext .ts,.js",
    "test": "npx playwright test",
    "test:ui": "npx playwright test --ui",
    "test:report": "npx playwright show-report"
  },
  "dependencies": {
    "express": "^4.18.2"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.54.2",
    "@types/express": "^4.17.23",
    "@types/node": "^20.19.11",
    "@typescript-eslint/eslint-plugin": "^6.4.0",
    "@typescript-eslint/parser": "^6.4.0",
    "eslint": "^8.47.0",
    "nodemon": "^3.0.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2",
    "wait-on": "^8.0.4"
  }
}

{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020", "DOM"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "declaration": true,
    "outDir": "./dist",
    "rootDir": "./",
    "baseUrl": ".",
    "paths": {
      "@core/*": ["./core/*"],
      "@app/*": ["./app/*"],
      "@shared/*": ["./shared/*"],
      "@config/*": ["./config/*"]
    }
  },
  "include": [
    "core/**/*",
    "app/**/*",
    "shared/**/*",
    "config/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "tests"
  ]
}